# ----------------------------------------------------------------------------
# Apache Maven Wrapper startup batch script, adjusted for sh.
# ----------------------------------------------------------------------------

set -e

WRAPPER_LAUNCHER=org.apache.maven.wrapper.MavenWrapperMain
JAR_PATH=".mvn/wrapper/maven-wrapper.jar"
PROPS_PATH=".mvn/wrapper/maven-wrapper.properties"

if [ ! -f "$PROPS_PATH" ]; then
  echo "Cannot find $PROPS_PATH" >&2
  exit 1
fi

if [ -z "$MAVEN_PROJECTBASEDIR" ]; then
  MAVEN_PROJECTBASEDIR="$(pwd)"
fi

# Download wrapper jar if missing
if [ ! -f "$JAR_PATH" ]; then
  WRAPPER_URL="https://repo.maven.apache.org/maven2/org/apache/maven/wrapper/maven-wrapper/3.3.1/maven-wrapper-3.3.1.jar"
  echo "Downloading Maven Wrapper from $WRAPPER_URL"
  mkdir -p "$(dirname "$JAR_PATH")"
  if command -v curl >/dev/null 2>&1; then
    curl -fsSL -o "$JAR_PATH" "$WRAPPER_URL"
  elif command -v wget >/dev/null 2>&1; then
    wget -O "$JAR_PATH" "$WRAPPER_URL"
  else
    echo "Cannot download Maven Wrapper jar; please install curl or wget" >&2
    exit 1
  fi
fi

JAVA_EXE="java"
if [ -n "$JAVA_HOME" ]; then
  JAVA_EXE="$JAVA_HOME/bin/java"
fi

exec "$JAVA_EXE" -Dmaven.multiModuleProjectDirectory="$MAVEN_PROJECTBASEDIR" -classpath "$JAR_PATH" $WRAPPER_LAUNCHER "$@"

